{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "ES2015"],
    "tsBuildInfoFile": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.stories.mdx",
    ".storybook/**"
  ]
}
